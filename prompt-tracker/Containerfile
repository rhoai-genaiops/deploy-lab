FROM python:3.11-slim

# Install git and other necessary system packages
RUN apt-get update && \
    apt-get install -y git && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements-monitor.txt .
RUN pip install --no-cache-dir -r requirements-monitor.txt

COPY . .

ENV FLASK_HOST=0.0.0.0
ENV FLASK_PORT=5000
ENV MONITOR_INTERVAL=30
ENV GIT_BRANCH=main

EXPOSE 5000

CMD ["python", "run_monitor.py"]